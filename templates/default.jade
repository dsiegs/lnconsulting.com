doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    if title
      title #{title}
    if description
      meta(name='description', content='#{description}')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='author', content='L.N. Consulting Inc.')
    // Vendor
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    //-link(href='{{ theme_url }}/assets/animate.css', rel='stylesheet')
    //-link(href='{{ theme_url }}/assets/csspinner.min.css', rel='stylesheet')
    // Fonts
    link(href='//fonts.googleapis.com/css?family=Montserrat|Quando', rel='stylesheet', type='text/css')
    // Custom
    link(href='/styles.css', rel='stylesheet', type='text/css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
    script(src='https://code.jquery.com/jquery-1.10.2.min.js')
  body
    // Loading spinner
    #loading.spinner(style='display: none;')
      .rect1
      .rect2
      .rect3
      .rect4
      .rect5
    #wrap
      .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand.brand(href='/')
              img(src='/files/LNCLOGO.jpg', style='max-height: 100px; display: block; margin: auto;', alt='LN Consulting Inc.')
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/about/') About
              li
                a(href='/services') Services
              li
                a(href='/portfolio') Projects
              li
                a(href='/contact') Contact
      #container.container.animated(class='fadeInDown')
        div !{content}
    // JS
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='/frontend.js')
